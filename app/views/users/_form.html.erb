<%= form_for @user, url: signup_url, :html => {:id => 'SignupForm'} do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:" %>
      </h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li>
            <%= message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.text_field :firstName, placeholder: t('.fname_prompt'), :html => {:id => 'Fname'}  %>
  <%= f.text_field :lastName, placeholder: t('.lname_prompt'), :html => {:id => 'Lname'}  %>
  <br>
  <%= f.text_field :email, placeholder: t('.email_prompt'), :html => {:id => 'Email'} %>
  <br>
  <%= f.password_field :password, placeholder: t('.pword_prompt'), :html => {:id => 'Password'} %>
  <%= f.password_field :password_confirmation, placeholder: t('.pword_prompt'), :html => {:id => 'PasswordConf'} %>
  <br>
  <%= f.submit "Submit"%>
<% end %>