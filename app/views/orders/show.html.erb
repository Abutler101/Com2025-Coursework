<h1 class="pageTitle"><%=t('.page_title') %> - <%=@order.id %></h1><hr>
<h3><%=t('.thanks') %> <%= @order.email %></h3><br>
<%=t('.placed') %> at <%= @order.created_at %>
<table>
  <thead>
    <tr>
      <th><%=t('.prod_title') %></th>
      <th><%=t('.quan_title') %></th>
      <th><%=t('.price_title') %></th>
    </tr>
  </thead>
  <tbody>
    <%=render "entry"%>
  </tbody>
  <tfoot>
    <tr>
      <th>
        <%=t('.total_title') %>
      </th>
      <th>
        <%= humanized_money_with_symbol @order.totalCost %>
      </th>
    </tr>
  </tfoot>
</table>