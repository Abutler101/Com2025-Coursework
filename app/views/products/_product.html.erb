<article class="product">
  <header>
    <%=link_to product do %>
      <%= image_tag product.image.thumb.url, alt: product.name %>
      <h3><%= product.name %></h3>
    <%end%>
  </header>
  <p>
    <%= product.description %>
  </p>
  <footer>
    <% if product.stockCount >0 %>
      <%= link_to add_item_carts_path(product_id: product.id), method: :put do %>
        <%= fa_icon "camera-retro", text: "Add To Cart" %>
        <%end%>
    <%end%>
    <%= humanized_money_with_symbol product.price %>
  </footer>
</article>