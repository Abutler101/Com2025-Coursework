<section class="prdouctFocus">
  <header class="PageSpecificHeader">

  </header>
  <article class="productDetails">
    <h4>
      <%=t('.image_title') %> <%=image_tag @product.image.main.url %>
      <br>
      <%=t('.name_title') %> <%= @product.name %>
      <br>
      <%=t('.desc_title') %>  <%= @product.description %>
      <br>
      <%=t('.stock_title') %>  <%= @product.stockCount %>
      <br>
      <%=t('.price_title') %>  <%= humanized_money_with_symbol @product.price %>
      <br>
      <%=t('.reviews_title') %>
    </h4>
    <%if curr_user %>
      <%= form_for(Review.new, url: product_reviews_url(@product,@review)) do |f|%>
        <h5><%=t('.add_review') %> </h5>
        <%= f.select :rating,
                     options_for_select([[t('.lvl5'),5],
                                         [t('.lvl4'), 4],
                                         [t('.lvl3'), 3],
                                         [t('.lvl2'), 2],
                                         [t('.lvl1'), 1],
                                         [t('.lvl0'),0]
                                        ])%>
        <%= f.text_area :content%>
        <%= f.submit t('.sub_button') %>
      <%end %>
    <%end %>
    <% @product.reviews.each do |i| %>
      <%= i.rating%> - <%=i.content %> <br>
      <% if i.user == curr_user %>
        <%= link_to t('.remove_button'), product_review_path(@product, i), :method => :delete%>
      <%end %>
      <hr>
    <% end %>
    <br>
  </article>
</section>